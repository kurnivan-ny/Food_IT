<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.MaterialComponents.noActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_cyan</item>
        <item name="colorPrimaryVariant">@color/teal_green</item>
        <item name="colorOnPrimary">@color/green_apple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_apple</item>
        <item name="colorSecondaryVariant">@color/lime_green</item>
        <item name="colorOnSecondary">@color/light_lime</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/green_apple</item>
        <item name="colorAccent">@color/hint</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:windowBackground">@drawable/ic_form_white</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:keyTextSize">14sp</item>
    </style>
</resources>