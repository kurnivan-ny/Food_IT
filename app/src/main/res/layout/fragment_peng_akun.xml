<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pengAkunFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.fragment.profile.PengAkunFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_top_bar">

        <ImageView
            android:id="@+id/iv_back_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_left_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/_pengaturan_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="36dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="PENGATURAN AKUN"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_back_akun"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="111px"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_user_profile"

                android:background="@drawable/ic_border_round"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:padding="5dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginTop="150px"
                android:layout_marginStart="8dp"
                android:text="Kurnivan Noer Yusvianto"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_profile" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="KNY / 3122 kal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_nama"
                app:layout_constraintStart_toEndOf="@id/iv_profile" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_detail_pribadi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="111px"
                android:background="@drawable/ic_button_radius_atas"
                android:fontFamily="@font/nunito_extrabold"
                android:paddingHorizontal="30dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_arrow_right_white"
                android:text="Detail Pribadi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profile" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ganti_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:background="@color/dark_cyan"
                android:fontFamily="@font/nunito_extrabold"
                android:paddingHorizontal="30dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_arrow_right_white"
                android:text="Email Terbaru"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_detail_pribadi" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ganti_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:background="@drawable/ic_button_radius_bawah"
                android:fontFamily="@font/nunito_extrabold"
                android:paddingHorizontal="30dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_arrow_right_white"
                android:text="Ubah Kata Sandi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_ganti_email" />
            
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_hapus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="36dp"
                android:background="@drawable/ic_button_linegreen_rect"
                android:fontFamily="@font/nunito_extrabold"
                android:paddingHorizontal="30dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_arrow_right_green"
                android:text="Hapus Akun"
                android:textAllCaps="false"
                android:textColor="@color/green_apple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_ganti_password" />

            
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>