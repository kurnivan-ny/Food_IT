<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/kurang">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Karbohidrat"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_berat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="10 gr"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_berat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/tv_batas_bawah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30gr"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_batas_bawah"
            android:drawablePadding="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16sp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tv_batas_atas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150gr"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_batas_atas"
            android:drawablePadding="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16sp"
            android:layout_marginTop="45dp" />

        <TextView
            android:id="@+id/tv_penyakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyakit akibat kekurangan Karbohidrat:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:layout_marginTop="75dp"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:id="@+id/list_penyakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Hiploglikemia\n2. Gangguan Pencernaan\n3. Kelelahan dan Lemas"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:layout_marginTop="95dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="15dp"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>