<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_font"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/till_nama"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="clear_text"
        app:helperText=""
        app:helperTextTextColor="@android:color/holo_red_light"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_form_white"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start|center"
            android:hint="Masukan Nama Lengkap"
            android:inputType="text"
            android:maxLength="24"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/slate_gray"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/till_jenis_kelamin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/till_nama">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/edt_jenis_kelamin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ic_form_white"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start|center"
            android:inputType="none"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Masukan Jenis Kelamin"
            android:textColor="@color/slate_gray"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/till_umur"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="clear_text"
        app:helperText=""
        app:helperTextTextColor="@android:color/holo_red_light"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/till_jenis_kelamin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_umur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_form_white"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start|center"
            android:hint="Masukan Umur"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/slate_gray"
            android:textSize="14sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/till_tinggi"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="clear_text"
        app:helperText=""
        app:helperTextTextColor="@android:color/holo_red_light"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/till_umur" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_tinggi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_form_white"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start|center"
            android:hint="Masukan Tinggi"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/slate_gray"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/till_berat_badan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="clear_text"
        app:helperText=""
        app:helperTextTextColor="@android:color/holo_red_light"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/till_tinggi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_berat_badan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_form_white"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start|center"
            android:hint="Masukan Berat Badan"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/slate_gray"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_lanjut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/ic_button"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Lanjut"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/till_berat_badan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_akun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableStart="@drawable/ic_line"
        android:drawableEnd="@drawable/ic_line"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:paddingHorizontal="50dp"
        android:text="Sudah Punya Akun?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lanjut"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_masuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/ic_button_transparent"
        android:fontFamily="@font/montserrat_bold"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_akun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>